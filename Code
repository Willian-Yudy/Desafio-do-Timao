#include <iostream>
#include <string>

using namespace std;

int main() {
    int score = 0;
    int errors = 0;
    string answer;

    cout << "==============================" << endl;
    cout << "       DESAFIO DO TIMÃO 🦅       " << endl;
    cout << "==============================" << endl;
    cout << "Answer 5 questions correctly to win the title 'Gavião'." << endl;
    cout << "Get 3 wrong, and you'll be labeled... a 'Palmeirense' 🐖!" << endl;
    cout << "Type A, B or C to answer. Good luck!" << endl << endl;

    //  1
    cout << "1. Which year was Corinthians founded?" << endl;
    cout << "A) 1910" << endl;
    cout << "B) 1920" << endl;
    cout << "C) 1905" << endl;
    cout << "Your answer: ";
    cin >> answer;

    if (answer == "A" || answer == "a") {
        cout << "Correct! 🦅" << endl;
        score++;
    } else {
        cout << "Wrong 🐽! The correct answer was A." << endl;
        errors++;
    }

    //  2
    cout << "\n2. How many world titles does Palmeiras have?" << endl;
    cout << "A) 2" << endl;
    cout << "B) 1" << endl;
    cout << "C) 0 (51 é PINGA!)" << endl;
    cout << "Your answer: ";
    cin >> answer;

    if (answer == "C" || answer == "c") {
        cout << "Correct! 🦅" << endl;
        score++;
    } else {
        cout << "Wrong 🐽! The correct answer was C." << endl;
        errors++;
    }

    // 3
    cout << "\n3. Which stadium is home to one of the biggest clubs in Brazil?" << endl;
    cout << "A) Morumbi" << endl;
    cout << "B) Allianz Parque" << endl;
    cout << "C) Neo Química Arena - Home of the Giant and the best in the world 🏟️" << endl;
    cout << "Your answer: ";
    cin >> answer;

    if (answer == "C" || answer == "c") {
        cout << "Correct! Welcome to the Hospicio 🤪!" << endl;
        score++;
    } else {
        cout << "Wrong 🐽! The correct answer was C." << endl;
        errors++;
    }

    // 4
    cout << "\n4. Who is the all-time top scorer for Corinthians?" << endl;
    cout << "A) Sócrates" << endl;
    cout << "B) Marcelinho Carioca" << endl;
    cout << "C) Casagrande" << endl;
    cout << "Your answer: ";
    cin >> answer;

    if (answer == "B" || answer == "b") {
        cout << "Correct! King Marcelinho! 👑" << endl;
        score++;
    } else {
        cout << "Wrong 🐽! The correct answer was B." << endl;
        errors++;
    }

    // 5
    cout << "\n5. How many times has Corinthians won FIFA World Cup ⚽?" << endl;
    cout << "A) 4" << endl;
    cout << "B) 2" << endl;
    cout << "C) 3" << endl;
    cout << "Your answer: ";
    cin >> answer;

    if (answer == "B" || answer == "b") {
        cout << "Correct! 🏆🦅" << endl;
        score++;
    } else {
        cout << "Soon ! The correct answer was B." << endl;
        errors++;
    }

    // Final result
    cout << "\n==============================" << endl;
    if (score >= 5) {
        cout << "🏆 Congratulations! You are a true GAVIÃO FIEL! 🦅" << endl;
    } else if (errors >= 3) {
        cout << "🐖 Oh no... You've become a PALMEIRENSE SEM MUNDIAL." << endl;
    } else {
        cout << "You finished the game! Final score: " << score << " stars." << endl;
    }
    cout << "==============================" << endl;

    return 0;
}
